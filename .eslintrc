{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "browser" : true,
    "mocha": true
  },
  "plugins": [
   "react"
  ],
  "rules": {
    "indent": [2, 2],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-style": [2, "last"],
    "curly": [2, "multi-line"],
    "quotes": [2, "single"],
    "object-curly-spacing": [2, "never"],
    "strict": [2, "never"],
    "no-debugger": 2,
    "no-console": 2,
    "no-shadow": 0,
    "handle-callback-err": 2,
    "camelcase": 0,
    "key-spacing": [2, {
     "beforeColon": false,
     "afterColon": true
     }],
    "no-underscore-dangle": 0,
    "no-mixed-requires": 0,
    "no-use-before-define": 0
  }
}
